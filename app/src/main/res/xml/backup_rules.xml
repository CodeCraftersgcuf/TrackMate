<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include all files in the app's data directory -->
    <include domain="file" path="." />

    <!-- Exclude cache files -->
    <exclude domain="file" path="cache/" />

    <!-- Include shared preferences -->
    <include domain="sharedpref" path="." />
</full-backup-content>
